<div class="row">
  <div class="col-lg-12">
    <rd-widget>
      <rd-widget-header icon="fa-tasks" title="Profesores"><a href="#/dashboard/professors/form">Crear</a></rd-widget-header>
      <rd-widget-body classes="no-padding">
        <div class="table-responsive">
          <table class="table table-hover">
            <tbody>
            <tr>
              <th>Nombre del profesor</th>
              <th>Apellido del profesor</th>
            </tr>
            <tr ng-repeat="professor in professors" ng-click="show(professor)">
              <td>{{professor.name}}</td>
              <td>{{professor.last_names}}</td>
            </tr>
            </tbody>
          </table>
        </div>
      </rd-widget-body>
    </rd-widget>
  </div>
</div>