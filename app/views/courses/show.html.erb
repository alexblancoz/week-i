<div class="col-lg-12">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <a class="btn btn-default navbar-btn" href="#/dashboard/courses/list">
        Atr&aacute;s
      </a>

      <button class="btn btn-default navbar-btn pull-right" ng-click="addProfessor(course)">
        Agregar profesor
      </button>
    </div>
  </nav>
</div>

<div class="row">
  <div class="col-lg-6 col-md-6 col-xs-12">
    <rd-widget>
      <rd-widget-body>
        <div class="widget-icon red pull-left"><i class="fa fa-info-circle"></i></div>
        <div class=title>{{course.key}}</div>
        <div class=comment>Clave</div>
      </rd-widget-body>
    </rd-widget>
  </div>

  <div class="col-lg-6 col-md-6 col-xs-12">
    <rd-widget>
      <rd-widget-body>
        <div class="widget-icon blue pull-left"><i class="fa fa-user"></i></div>
        <div class=title>{{course.name}}</div>
        <div class=comment>Nombre</div>
      </rd-widget-body>
    </rd-widget>
  </div>

  <div class="col-lg-6 col-md-6 col-xs-12">
    <rd-widget>
      <rd-widget-body>
        <div class="widget-icon blue pull-left"><i class="fa fa-user"></i></div>
        <div class=title>{{course.semester}}</div>
        <div class=comment>Semestre</div>
      </rd-widget-body>
    </rd-widget>
  </div>
</div>

<div class="row">
  <div class="col-lg-3 col-md-6 col-xs-12" ng-repeat="professor in course.professors">
    <rd-widget>
      <rd-widget-body>
        <div class="widget-icon green pull-left ng-scope"><i class="fa fa-users"></i></div>
        <div class=title>{{professor.name}} {{professor.last_names}}</div>
        <div class=comment>Profesor</div>
        <div class="btn btn-default" ng-click="destroyProfessor(professor, course)">
          Borrar
        </div>
      </rd-widget-body>
    </rd-widget>
  </div>
</div>
