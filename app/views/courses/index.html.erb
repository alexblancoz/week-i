<div class="row">
  <div class="col-lg-6">
    <rd-widget  ng-if="user.identity == user_identities.user">
      <rd-widget-header icon="fa-tasks" title="Materias en las que estas"></rd-widget-header>
      <rd-widget-body classes="no-padding">
        <div class="table-responsive">
          <table class="table table-hover">
            <tbody>
            <tr>
              <th>Clave</th>
              <th>Nombre</th>
              <th>Semestre</th>
              <th>Profesor</th>
              <th></th>
            </tr>
            <tr ng-repeat="course in courses_taken">
              <td>{{course.key}}</td>
              <td>{{course.name}}</td>
              <td>{{course.semester}}</td>
              <td>{{course.professor_name}} {{course.professor_last_names}}</td>
              <td ng-click="destroyCourse(course)"><i class="fa fa-trash-o"></i> Borrar</td>
            </tr>
            </tbody>
          </table>
        </div>
      </rd-widget-body>
    </rd-widget>
  </div>

  <div class="col-lg-6">
    <rd-widget ng-if="user.identity == user_identities.user">
      <rd-widget-header icon="fa-tasks" title="Materias en las que no estas"></rd-widget-header>
      <rd-widget-body classes="no-padding">
        <div class="table-responsive">
          <table class="table table-hover">
            <tbody>
            <tr>
              <th>Clave</th>
              <th>Nombre</th>
              <th>Semestre</th>
              <th></th>
            </tr>
            <tr ng-repeat="course in courses_not_taken">
              <td>{{course.key}}</td>
              <td>{{course.name}}</td>
              <td>{{course.semester}}</td>
              <td ng-click="addCourse(course)"><i class="fa fa-plus-circle"></i> Agregar</td>
            </tr>
            </tbody>
          </table>
        </div>
      </rd-widget-body>
    </rd-widget>
  </div>

  <div class="col-lg-12">
    <rd-widget ng-if="user.identity == user_identities.administrator">
      <rd-widget-header icon="fa-tasks" title="Materias"><input type="text" ng-model="search.name" placeholder="Nombre de la materia"><a href="#/dashboard/courses/form">Crear</a></rd-widget-header>
      <rd-widget-body classes="no-padding">
        <div class="table-responsive">
          <table class="table table-hover">
            <tbody>
            <tr>
              <th>Clave</th>
              <th>Nombre</th>
              <th>Semestre</th>
              <th></th>
              <th></th>
            </tr>
            <tr ng-repeat="course in courses | filter:search">
              <td>{{course.key}}</td>
              <td>{{course.name}}</td>
              <td>{{course.semester}}</td>
              <td><a href="#/dashboard/courses/form?courseId={{course.id}}">Editar</a></td>
              <td><a ng-click="destroy(course)">Borrar</a></td>
            </tr>
            </tbody>
          </table>
        </div>
      </rd-widget-body>
    </rd-widget>
  </div>
</div>