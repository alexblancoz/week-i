<div class="row">
  <div class="col-lg-6">
    <rd-widget>
      <rd-widget-header icon="fa-tasks" title="Grupos calificados"></rd-widget-header>
      <rd-widget-body classes="no-padding">
        <div class="table-responsive">
          <table class="table table-hover">
            <tbody>
            <tr>
              <th>Nombre</th>
              <th>Due&ntilde;o</th>
              <th>N&uacute;mero de miembros</th>
              <th>Calificaci&oacute;n</th>
            </tr>
            <tr ng-repeat="score in scored_groups" ng-click="show(group)">
              <td>{{score.group_name}}</td>
              <td>{{score.user_name}} {{score.user_last_names}}</td>
              <td>{{score.group_member_count}}</td>
              <td>{{score.score}}</td>
            </tr>
            </tbody>
          </table>
        </div>
      </rd-widget-body>
    </rd-widget>
  </div>
  <div class="col-lg-6">
    <rd-widget>
      <rd-widget-header icon="fa-tasks" title="Grupos no calificados"><input type="text" ng-model="search.group_name" placeholder="Nombre del grupo"></rd-widget-header>
      <rd-widget-body classes="no-padding">
        <div class="table-responsive">
          <table class="table table-hover">
            <tbody>
            <tr>
              <th>Nombre</th>
              <th>Due&ntilde;o</th>
              <th>N&uacute;mero de miembros</th>
              <th></th>
            </tr>
            <tr ng-repeat="score in non_scored_groups | filter:search">
              <td>{{score.group_name}}</td>
              <td>{{score.user_name}} {{score.user_last_names}}</td>
              <td>{{score.group_member_count}}</td>
              <td><a href="#/dashboard/scores/form?groupId={{score.group_id}}">Calificar</a></td>
            </tr>
            </tbody>
          </table>
        </div>
      </rd-widget-body>
    </rd-widget>
  </div>
</div>
</div>