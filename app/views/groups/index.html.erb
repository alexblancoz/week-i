<div class="row">
  <div class="col-lg-12">
    <rd-widget>
      <rd-widget-header icon="fa-tasks" title="Grupos"><input class="form-control search-control" type="text" ng-model="search.name" placeholder="Nombre del grupo"><a href="#/dashboard/groups/form" ng-if="user.identity == user_identities.user">Crear</a></rd-widget-header>
      <rd-widget-body classes="no-padding">
        <div class="table-responsive">
          <table class="table table-hover">
            <tbody>
            <tr>
              <th>Nombre</th>
              <th>Due&ntilde;o</th>
              <th>N&uacute;mero de miembros</th>
              <th></th>
              <th></th>
            </tr>
            <tr ng-repeat="group in groups | filter:search">
              <td ng-click="show(group)">{{group.name}}</td>
              <td ng-click="show(group)">{{group.user_name}} {{group.user_last_names}}</td>
              <td ng-click="show(group)">{{group.member_count}}</td>
              <td><a href="#/dashboard/groups/form?groupId={{group.id}}" ng-if="group.owner_id == user.id">Editar</a></td>
              <td><a ng-click="destroy(group)" ng-if="group.owner_id == user.id">Borrar</a></td>
            </tr>
            </tbody>
          </table>
        </div>
      </rd-widget-body>
    </rd-widget>
  </div>
</div>