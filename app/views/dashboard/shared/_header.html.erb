<div class="row header">
  <div class="col-xs-12">
    <div class="user pull-right">
      <span class="dropdown item" dropdown>
          <a href="#" class="dropdown-toggle" dropdown-toggle>
            <%= image_tag 'dashboard/avatar.jpg' %>
          </a>
          <ul class="dropdown-menu dropdown-menu-right">
            <li ng-repeat="item in dropdownItems">
              <a ng-click="dropdownClicked($index)">{{item.label}}</a>
            </li>
          </ul>
        </span>
    </div>
    <div class="meta">
      <div class="page">
        Dashboard
      </div>
      <div class="breadcrumb-links">
        Home / Dashboard
      </div>
    </div>
  </div>
</div>