<div class="row">
  <div class="col-lg-12">
    <rd-widget>
      <rd-widget-header icon="fa-tasks" title="Usuarios"><input class="form-control search-control" type="text" ng-model="search.name" placeholder="Nombre del alumno"></rd-widget-header>
      <rd-widget-body classes="no-padding">
        <div class="table-responsive">
          <table class="table table-hover">
            <tbody>
            <tr>
              <th>Nombre del usuario</th>
              <th>Apellido del usuario</th>
              <th>Rol del usuario</th>
              <th>Calificaci&oacute;n</th>
            </tr>
            <tr ng-repeat="user in users | filter:search">
              <td>{{user.name}}</td>
              <td>{{user.last_names}}</td>
              <td>{{identities[user.identity]}}</td>
              <td>{{user.score}}</td>
            </tr>
            </tbody>
          </table>
        </div>
      </rd-widget-body>
    </rd-widget>
  </div>
</div>